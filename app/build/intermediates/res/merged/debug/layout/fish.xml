<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="720dp" >

    <LinearLayout
        android:id="@+id/ll_fish_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="50dp"
            android:layout_y="20dp"
            android:background="@drawable/resource2"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_fish_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="160dp"
            android:layout_y="30dp" >
        </LinearLayout>
        
        <include 
            layout="@layout/layout_click_study"
            android:layout_x="5dp"
            android:layout_y="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/suspended"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_x="866dp"
            android:layout_y="10dp"
            android:background="@drawable/suspended1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_x="943dp"
            android:layout_y="10dp"
            android:background="@drawable/voice1"
            android:visibility="gone" />

        <ImageView
            android:layout_width="1024dp"
            android:layout_height="57dp"
            android:layout_x="0dp"
            android:layout_y="665dp"
            android:background="@drawable/score_bar" />

        <FrameLayout
            android:layout_width="327dp"
            android:layout_height="44dp"
            android:layout_x="416dp"
            android:layout_y="675dp" >

            <ImageView
                android:id="@+id/fish_timebar2"
                android:layout_width="327dp"
                android:layout_height="44dp"
                android:background="@drawable/time_bar2"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fish_timebar1"
                android:layout_width="327dp"
                android:layout_height="44dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_fish_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="160dp"
            android:layout_y="680dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fish_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="860dp"
            android:layout_y="680dp" >
        </LinearLayout>
    </AbsoluteLayout>

    <ImageView
        android:id="@+id/fish_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>